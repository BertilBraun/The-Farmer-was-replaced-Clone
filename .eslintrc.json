{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        // Your custom rules here
        "varsIgnorePattern": "off",
        "argsIgnorePattern": "off",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "off"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}